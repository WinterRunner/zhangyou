    android:layout_height="match_parent">

    <ViewStub
        android:id="@+id/view_stub_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/uilibrary_view_content" />

    <ViewStub
        android:id="@+id/view_stub_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
