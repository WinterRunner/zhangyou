    <ViewStub
        android:id="@+id/view_stub_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/uilibrary_view_error" />

    <ViewStub
        android:id="@+id/view_stub_loading"
